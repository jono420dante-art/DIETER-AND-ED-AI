# DIETER AND ED AI - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://dieter:your_password@localhost:5432/dieter_and_ed_ai
DB_USER=dieter
DB_PASSWORD=your_secure_password_here
DB_NAME=dieter_and_ed_ai

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRES_IN=7d

# ============================================
# REDIS CACHE
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# AI PROVIDERS - MUSIC GENERATION
# ============================================
# Suno AI (from DIETER Manus Build)
SUNO_API_KEY=your_suno_api_key
SUNO_API_URL=https://api.suno.ai/v1

# Udio AI (from DIETER PRO Arena Build)
UDIO_API_KEY=your_udio_api_key
UDIO_API_URL=https://api.udio.com/v1

# ============================================
# AI PROVIDERS - VIDEO GENERATION
# ============================================
# RunwayML (from AI Music Hub Manus.space)
RUNWAY_API_KEY=your_runway_api_key
RUNWAY_API_URL=https://api.runwayml.com/v1

# Stability AI
STABILITY_API_KEY=your_stability_api_key
STABILITY_API_URL=https://api.stability.ai/v2beta

# ============================================
# AI PROVIDERS - LANGUAGE MODELS
# ============================================
# OpenAI (GPT-4 for lyrics, chat, AI features)
OPENAI_API_KEY=your_openai_api_key

# Anthropic (Claude for advanced AI orchestration)
ANTHROPIC_API_KEY=your_anthropic_api_key

# ============================================
# CLOUD STORAGE
# ============================================
# AWS S3 for audio/video file storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=dieter-and-ed-ai

# ============================================
# EMAIL SERVICE
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ============================================
# MONITORING & ANALYTICS
# ============================================
SENTRY_DSN=your_sentry_dsn
GA_TRACKING_ID=your_google_analytics_id

# ============================================
# PAYMENT (Optional)
# ============================================
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ============================================
# SELF-PERFORMANCE ENGINE
# ============================================
PERFORMANCE_MONITOR_INTERVAL=30000
AI_LEARNING_ENABLED=true
AUTO_OPTIMIZE=true
